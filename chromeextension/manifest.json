{
  "manifest_version": 2,
  "name": "Mark As Read Button",
  "version": "0.1",
  "description": "Add the \"Позначити як прочитані\" (Mark as read) button to the top and bottom menus.",
  "content_scripts": [
    {
      "matches": [
        "http://mail.ukr.net/*",
        "https://mail.ukr.net/*"
      ],
      "css": [
        "mark-as-read.css"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png",
    "256": "icons/icon_256.png",
    "512": "icons/icon_512.png"
  }
}